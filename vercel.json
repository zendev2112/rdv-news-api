{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/templates/**", "src/assets/**"],
        "maxDuration": 300,
        "memory": 3008
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 300,
        "memory": 3008
      }
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/admin",
      "dest": "/public/admin.html"
    },
    {
      "src": "/api/fetch/all",
      "dest": "/api/fetch/all.js"
    },
    {
      "src": "/api/fetch/section",
      "dest": "/api/fetch/section.js"
    },
    {
      "src": "/(.*)",
      "dest": "src/server.js"
    }
  ]
}
